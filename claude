                    "Public Holiday": { hourly: 128, callOut: 155 }
                },
                TAS: {
                    "Normal Business Hours": { hourly: 75, callOut: 105 },
                    "After Hours": { hourly: 110, callOut: 135 },
                    "Saturday": { hourly: 85, callOut: 115 },
